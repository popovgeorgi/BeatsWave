@using BeatsWave.Web.ViewModels.Beats
@using BeatsWave.Common
@model IndexViewModel
@{
    ViewData["Title"] = "NEWS FEED";
    @if (this.User.IsInRole(GlobalConstants.BeatmakerRoleName))
    {
        this.Layout = "~/Views/Shared/_LayoutBeatmaker.cshtml";
    }
}

<section id="blog-grid-gallery">
    <div id="grid-gallery" class="grid-gallery">
        <section class="grid-wrap section">
            <ul class="grid">
                <li class="grid-sizer"></li>
                @foreach (var beat in Model.Beats)
                {
                    <li class="wow fadeInUp">
                        <a asp-controller="Beats" asp-action="ByName" asp-route-Id="@beat.BeatId">
                            <figure>
                                <div class="blog-grid-image">
                                    <img src="@(beat.ImageUrl)" alt="@beat.Name" />
                                </div>
                                <figcaption>
                                    <h3>@beat.Name</h3>
                                    <p>produced by @beat.Producer<p>
                                    <p>$@beat.StandartPrice<sup>.00</sup></p>
                                    @*<span class="post-publish-date">@beat.CreatedAt.Month @beat.CreatedAt.Day, @beat.CreatedAt.Year</span>*@
                                    <p>
                                        @beat.Description
                                    </p>
                                </figcaption>
                            </figure>
                        </a>
                    </li>
                }
            </ul>
        </section><!-- // grid-wrap -->
    </div><!-- // grid-gallery -->
</section>
